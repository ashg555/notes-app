<%- include('layout', {title: title, page: 'add' }); %>
<h1><%= title %></h1>
<p>Welcome to <%= title %></p>

<form method="post" action="/edit/<%= note[0].id %>">

  <label for="title">Title:</label>
  <input type="text" id="title" value="<%= note[0].title %>" name="title" required>

  <label for="body">Note:</label>
  <textarea id="body" name="body" required><%= note[0].body %></textarea>
  
  <label for="starred">Star This Note:</label>
  <input type="checkbox" id="starred" name="starred" <%= note[0].starred ? 'checked' : '' %>>

  <label for="color">Color:</label>
  <input type="color" id="color" value="<%= note[0].color %>" name="color">

  <button type="submit">Edit Note</button>
</form>

</body>
</html>
